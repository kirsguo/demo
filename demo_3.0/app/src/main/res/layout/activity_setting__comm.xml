<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <com.example.kirsguo.demo_2.ui.TitleLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="目标IP:"
                android:textSize="24sp"
                android:gravity="left"


                />
            <EditText
                android:id="@+id/setting_comm_targetip"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#505460"
                android:focusable="false"
                android:background="@null"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="目标端口:"
                android:textSize="24sp"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/setting_comm_targetport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="192.168.0.1"
                android:textSize="24sp"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#505460"
                android:focusable="false"
                android:background="@null"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的端口:"
                android:textSize="24sp"
                android:gravity="left"
               />
            <EditText
                android:id="@+id/setting_comm_myport"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="192.168.0.1"
                android:textSize="24sp"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#505460"
                android:focusable="false"
                android:background="@null"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="应用名称:"
                android:textSize="24sp"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/setting_comm_appname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="192.168.0.1"
                android:textSize="24sp"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#505460"
                android:focusable="false"
                android:background="@null"
                android:inputType="text"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="盒子类型:"
                android:textSize="24sp"
                android:gravity="left"
                />
            <EditText
                android:id="@+id/setting_comm_boxtype"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="192.168.0.1"
                android:textSize="24sp"
                android:gravity="left"
                android:maxLines="1"
                android:textColor="#505460"
                android:focusable="false"
                android:background="@null"
                android:inputType="text"
                />

        </LinearLayout>
        <Button
            android:id="@+id/setting_comm_submint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="确定"
            android:padding="15dp"/>
    </LinearLayout>
</LinearLayout>
